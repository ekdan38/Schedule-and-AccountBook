<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Personal_mode_tab_makegroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Personal_mode_makegroup"
    android:backgroundTint="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="73dp"
            android:text="모임 가계부의 이름을 입력해주세요!"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_GroupName"
            app:layout_constraintStart_toStartOf="@+id/edt_GroupName"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_GroupName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="2dp"
            android:hint="입력해주세요"
            app:layout_constraintBottom_toBottomOf="@+id/btn_GroupName"
            app:layout_constraintEnd_toStartOf="@+id/btn_GroupName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />

        <Button
            android:id="@+id/btn_GroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="88dp"
            android:layout_marginBottom="184dp"
            android:text="확인"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/edt_GroupName"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />

 />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>